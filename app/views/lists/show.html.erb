<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <a class="btn btn-flat me-1" href="/lists">Home</a>
  </div>
</div>

<div class="w-100 m-auto my-3 d-flex justify-content-end">
  <%= link_to new_list_bookmark_path(@list), class: "text-decoration-none" do %>
  <button class="btn btn-primary btn-lg btn-gradient text-white p-3 m-2 me-4 text-end">Add Movie</button>
  <% end %>
</div>


<% @list.bookmarks.each do |bookmark| %>
<div class="w-50 m-auto mb-2 text-center card-bookmark">
  <img src="<%= cl_image_path bookmark.photo.key, height: 300, crop: :fill %>", class= "mb-2"/>
  <div class="card-bookmark-infos text-center d-flex justify-content-center">
    <div class="bookmark-info">
      <h3 class="text-start p-2 mb-2"><%= bookmark.movie.title %></h3>
      <p class="text-start p-2 mb-2"><%= bookmark.comment %></p>
    </div>
    <div class= "ms-4 p-4 card-delete">
      <%= link_to '<i class="fa-solid fa-trash fa-xl"></i>'.html_safe, bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
<% end %>
