<div class="navbar navbar-light navbar-lewagon">
  <div class="container-fluid d-flex content-between">
    <a class="m-0 ms-1" href="#">
      <img src="https://source.unsplash.com/dCgbRAQmTQA" style="height: 50px;" class="border-0 rounded" />
</a>
  <h1 class="nv-title p-3 w-50 m-auto text-center text-dark">Watch Lists</h1>
    <a class="nav-link me-1" href="/lists">Home</a>
  </div>
</div>

<div class="w-100 m-auto my-3 d-flex justify-content-end">
  <%= link_to new_list_path, class: "text-decoration-none" do %>
  <button class="btn btn-primary btn-gradient text-white p-3 m-2 me-4 text-end">Add New List</button>
  <% end %>
</div>


<div class="cards w-75 m-auto">
  <% @lists.each do |list| %>
    <%= link_to list_path(list), class: "text-decoration-none" do %>
      <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>');">
        <%= list.name %>
      </div>
    <% end %>
  <% end %>
</div>
